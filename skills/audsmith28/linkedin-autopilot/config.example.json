{
  "identity": {
    "name": "Emma Chen",
    "headline": "AI Solutions Architect | Helping teams automate with agents",
    "industry": "Technology & AI",
    "current_role": "Independent Consultant",
    "location": "San Francisco Bay Area",
    "profile_url": "https://linkedin.com/in/yourprofile"
  },
  "targets": {
    "companies": [
      "OpenAI",
      "Anthropic",
      "Microsoft",
      "Google DeepMind"
    ],
    "job_titles": [
      "CTO",
      "VP Engineering",
      "AI Product Manager",
      "Head of AI"
    ],
    "keywords": [
      "AI automation",
      "agent frameworks",
      "LLM applications",
      "workflow automation",
      "n8n",
      "LangChain"
    ],
    "hashtags": [
      "#AIAgents",
      "#Automation",
      "#LLM",
      "#ProductivityHacks"
    ],
    "influencers": [
      "https://linkedin.com/in/example1",
      "https://linkedin.com/in/example2"
    ]
  },
  "posting": {
    "enabled": true,
    "schedule": {
      "days": ["monday", "wednesday", "friday"],
      "optimal_times": ["09:00", "14:00"],
      "timezone": "America/Los_Angeles"
    },
    "queue": [],
    "formats": {
      "default": {
        "max_length": 3000,
        "include_hashtags": true,
        "hashtag_limit": 3,
        "include_emoji": true
      }
    }
  },
  "engagement": {
    "enabled": true,
    "auto_like": {
      "enabled": true,
      "target_types": ["influencer_posts", "keyword_matches", "connection_posts"],
      "min_relevance_score": 0.7,
      "max_per_run": 30
    },
    "auto_comment": {
      "enabled": true,
      "target_types": ["influencer_posts", "high_engagement_posts"],
      "min_relevance_score": 0.85,
      "max_per_run": 10,
      "templates": [
        "Great insights on {topic}! I've found that {relevant_experience}.",
        "This resonates. We've seen similar results with {related_work}.",
        "Appreciate you sharing this. The point about {key_point} is spot on.",
        "{topic} is such an important area. Have you explored {related_question}?"
      ],
      "avoid_generic": true
    },
    "auto_share": {
      "enabled": false,
      "target_types": ["exceptional_posts"],
      "min_relevance_score": 0.9,
      "max_per_run": 2,
      "add_commentary": true
    },
    "runs_per_day": 3,
    "spread_hours": [9, 14, 18]
  },
  "outreach": {
    "connection_requests": {
      "enabled": true,
      "campaigns": [
        {
          "name": "ai-consultants",
          "active": true,
          "search_query": "AI consultant OR automation consultant",
          "filters": {
            "companies": [],
            "locations": ["United States", "United Kingdom", "Canada"],
            "exclude_titles": ["Recruiter", "Sales Development Representative"]
          },
          "note_template": "Hi {first_name}, I help teams build AI automation workflows and saw your work at {company}. Would love to connect and exchange ideas!",
          "max_per_week": 20,
          "acceptance_goal": 0.30
        }
      ]
    },
    "dm_sequences": {
      "enabled": true,
      "sequences": [
        {
          "name": "new-connection-intro",
          "trigger": "connection_accepted",
          "active": true,
          "steps": [
            {
              "delay_hours": 24,
              "message": "Hey {first_name}! Thanks for connecting. I saw you're working on {topic_from_profile}. I help teams with AI automation — happy to share resources if useful!",
              "condition": null
            },
            {
              "delay_hours": 96,
              "message": "Following up — I noticed your post about {recent_topic}. We've built similar solutions. Would you be open to a quick call to share notes?",
              "condition": "no_reply"
            }
          ]
        },
        {
          "name": "consulting-lead-gen",
          "trigger": "manual",
          "active": false,
          "steps": [
            {
              "delay_hours": 0,
              "message": "Hi {first_name}, I help {title}s at {company_type} companies build AI workflows that save 10-20 hours/week. Are you currently exploring automation for your team?",
              "condition": null
            },
            {
              "delay_hours": 72,
              "message": "Hey {first_name}, wanted to follow up. I've worked with teams like {similar_company} to automate {use_case}. Would a 15-min intro call be helpful?",
              "condition": "no_reply"
            },
            {
              "delay_hours": 120,
              "message": "Last ping! If automation isn't a priority right now, no worries. Feel free to reach out if things change. Here's a resource I think you'd find useful: {resource_link}",
              "condition": "no_reply"
            }
          ]
        }
      ],
      "reply_detection": {
        "enabled": true,
        "auto_pause_on_reply": true,
        "notify_on_reply": true
      }
    }
  },
  "safety": {
    "rate_limits": {
      "posts_per_day": 2,
      "engagements_per_day": 100,
      "connection_requests_per_week": 25,
      "dms_per_day": 40,
      "profile_views_per_day": 80
    },
    "delays": {
      "between_actions_seconds": [3, 8],
      "between_campaigns_minutes": [5, 15],
      "between_dms_minutes": [10, 20]
    },
    "warmup": {
      "enabled": true,
      "duration_days": 14,
      "start_percentage": 0.5,
      "daily_increase": 0.05
    },
    "blackout_windows": [
      {
        "days": ["saturday", "sunday"],
        "reason": "weekends"
      },
      {
        "hours": ["00:00-07:00", "23:00-23:59"],
        "reason": "late_night"
      }
    ],
    "detection": {
      "rate_limit_keywords": ["unusual activity", "verify", "security check"],
      "pause_on_detection": true,
      "notify_human": true
    }
  },
  "analytics": {
    "track_metrics": [
      "post_reach",
      "post_engagement_rate",
      "connection_acceptance_rate",
      "dm_reply_rate",
      "profile_views",
      "follower_growth"
    ],
    "reporting_frequency": "weekly",
    "benchmark_goals": {
      "connection_acceptance_rate": 0.30,
      "dm_reply_rate": 0.25,
      "post_engagement_rate": 0.05
    }
  },
  "reporting": {
    "channel": "telegram",
    "frequency": "weekly",
    "include": [
      "activity_summary",
      "top_performing_posts",
      "dm_conversions",
      "network_growth",
      "engagement_highlights"
    ],
    "alert_on": [
      "rate_limit_warning",
      "security_check_triggered",
      "dm_reply_received",
      "high_performing_post"
    ]
  },
  "browser": {
    "profile": "linkedin-autopilot",
    "headless": true,
    "session_persistence": true,
    "2fa_handling": "manual_prompt",
    "viewport": {
      "width": 1920,
      "height": 1080
    }
  }
}
