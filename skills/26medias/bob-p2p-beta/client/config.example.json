{
    "_comment": "Example config - copy to config.json and fill in your wallet details",
    "wallet": {
        "address": "YOUR_SOLANA_WALLET_ADDRESS",
        "privateKey": "your twelve word mnemonic phrase here"
    },
    "_comment_privateKey_formats": {
        "mnemonic": "word1 word2 word3 ... (12 or 24 words) - RECOMMENDED",
        "array": "[123, 45, 67, ...] (from wallet.json)",
        "base58": "5Kb8kLf4... (base58 encoded string)"
    },
    "token": {
        "symbol": "BOB",
        "mint": "F5k1hJjTsMpw8ATJQ1Nba9dpRNSvVFGRaznjiCNUvghH"
    },
    "aggregators": [
        "http://bob-aggregator.leap-forward.ca:8080"
    ],
    "solana": {
        "network": "mainnet-beta",
        "rpcUrl": "https://api.mainnet-beta.solana.com",
        "confirmations": 1
    },
    "provider": {
        "enabled": true,
        "port": 8080,
        "publicEndpoint": "http://localhost:8080",
        "httpDisabled": true,
        "_comment_httpDisabled": "Set to true when using P2P only (no public IP needed)",
        "database": {
            "type": "sqlite",
            "path": "/tmp/bob-client.db"
        },
        "results": {
            "storagePath": "/tmp/bob-results"
        }
    },
    "p2p": {
        "enabled": true,
        "port": 4001,
        "wsPort": 4002,
        "bootstrap": [
            "/ip4/YOUR_AGGREGATOR_IP/tcp/4001/p2p/AGGREGATOR_PEER_ID"
        ],
        "_comment": "Get bootstrap peer from your aggregator's /p2p/bootstrap endpoint"
    },
    "consumer": {
        "enabled": false,
        "results": {
            "outputPath": "/tmp/bob-consumer-results"
        }
    }
}
