  },
  {
    "id": "custom-002",
    "name": "Detect Discord token harvesting",
    "severity": "CRITICAL",
    "patterns": ["discord", "token", "localStorage"],
    "condition": "all",
    "description": "Skill may be harvesting Discord tokens from browser storage"
  },
  {
